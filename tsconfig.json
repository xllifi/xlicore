{
  "compilerOptions": {
		"moduleDetection": "force",
		"skipLibCheck": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
